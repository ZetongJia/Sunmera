<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="luminosit.sunmera" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_sunmera"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TestActivity"
            android:label="@string/title_activity_test"
            android:parentActivityName=".activity.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="luminosit.sunmera.activity.LoginActivity" />
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName=".activity.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="luminosit.sunmera.activity.LoginActivity" />
        </activity>
        <activity
            android:name=".activity.CameraActivity"
            android:label="@string/title_activity_camera"
            android:parentActivityName=".activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="luminosit.sunmera.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.SpecificViewActivity"
            android:label="@string/title_activity_specific_view"
            android:parentActivityName=".activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="luminosit.sunmera.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.GalleryActivity"
            android:label="@string/title_activity_gallery"
            android:parentActivityName=".activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="luminosit.sunmera.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.PosterGalleryActivity"
            android:label="@string/title_activity_poster_gallery"
            android:parentActivityName=".activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="luminosit.sunmera.activity.MainActivity" />
        </activity>
    </application>

</manifest>
